<?xml version="1.0" encoding="UTF-8"?>
<window>

	<!-- videoosd -->
	<onload>SetFocus(304)</onload>
	<controls>
		<control type="group">
			<visible>!Window.IsVisible(osdvideosettings) + !Window.IsVisible(osdaudiosettings) + !Window.IsVisible(videobookmarks) + !Window.IsVisible(subtitlesearch)</visible>
			<control type="image">
				<width>1920</width>
				<height>210</height>
				<texture border="1">osd/mask_top.png</texture>
			</control>
			<control type="image">
				<bottom>0</bottom>
				<width>1920</width>
				<height>720</height>
				<texture border="1">osd/mask_bottom.png</texture>
				<visible>!Player.Forwarding + !Player.Rewinding</visible>
			</control>
			<control type="image">
				<bottom>0</bottom>
				<width>1980</width>
				<height>120</height>
				<texture>osd/mask.png</texture>
				<visible>Player.Forwarding | Player.Rewinding</visible>
			</control>
			<control type="grouplist">
				<left>20</left>
				<top>64</top>
				<width>1880</width>
				<height>50</height>
				<align>center</align>
				<itemgap>0</itemgap>
				<orientation>horizontal</orientation>
				<!--  Movie title -->
				<control type="label">
					<width>auto</width>
					<height>50</height>
					<font>Med40</font>
					<textcolor>ffeaeaea</textcolor>
					<shadowcolor>ff000000</shadowcolor>
					<label>$INFO[VideoPlayer.Title]</label>
					<visible>IsEmpty(VideoPlayer.TVShowTitle)</visible>
				</control>
				<!--  TV Show title -->
				<control type="label">
					<width>auto</width>
					<height>50</height>
					<font>Med40</font>
					<textcolor>ffeaeaea</textcolor>
					<shadowcolor>ff000000</shadowcolor>
					<label>$INFO[VideoPlayer.TVShowTitle]</label>
					<visible>!IsEmpty(VideoPlayer.TVShowTitle)</visible>
				</control>
				<!-- Season/Episode number -->
				<control type="label">
					<width>auto</width>
					<height>50</height>
					<font>Med40</font>
					<textcolor>ffeaeaea</textcolor>
					<shadowcolor>ff000000</shadowcolor>
					<label>$VAR[PlayerEpisodeValue]</label>
				</control>
			</control>
			<!--  Episode title -->
			<control type="label">
				<left>20</left>
				<top>127</top>
				<width>1880</width>
				<height>40</height>
				<align>center</align>
				<font>Light26</font>
				<textcolor>fffe8e8e8</textcolor>
				<shadowcolor>ff000000</shadowcolor>
				<label>$INFO[VideoPlayer.Title]</label>
				<visible>!IsEmpty(VideoPlayer.TVShowTitle)</visible>
			</control>
			<!-- Pause -->
			<control type="image">
				<centerleft>50%</centerleft>
				<centertop>50%</centertop>
				<width>321</width>
				<height>341</height>
				<texture>osd/Pause.png</texture>
				<visible>Player.Paused</visible>
			</control>
			<!--  Progress bar -->
			<control id="99" type="progress">
				<left>92</left>
				<bottom>93</bottom>
				<width>1735</width>
				<height>11</height>
				<reveal>true</reveal>
				<info>Player.Progress</info>
				<texturebg border="4">osd/progress_back.png</texturebg>
				<lefttexture>-</lefttexture>
				<midtexture border="4">osd/progress_bar.png</midtexture>
				<righttexture>-</righttexture>
				<overlaytexture>-</overlaytexture>
			</control>
			<control type="grouplist">
				<!--  HD label -->
				<control type="label">
					<left>5</left>
					<top>-2</top>
					<width>auto</width>
					<height>34</height>
					<font>Bold28</font>
					<textcolor>ffebebeb</textcolor>
					<label>[COLOR orange][B]HD[/B][/COLOR]</label>
					<visible>IntegerGreaterThan(VideoPlayer.VideoResolution,719) + !IntegerGreaterThan(VideoPlayer.VideoResolution,721)</visible>
				</control>
				<!--  HD label -->
				<control type="label">
					<left>5</left>
					<top>-2</top>
					<width>auto</width>
					<height>34</height>
					<font>Bold28</font>
					<textcolor>ffebebeb</textcolor>
					<label>[COLOR orange][B]1080P[/B][/COLOR]</label>
					<visible>IntegerGreaterThan(VideoPlayer.VideoResolution,720)</visible>
				</control>
				<!--  SD label -->
				<control type="label">
					<left>5</left>
					<top>-2</top>
					<width>auto</width>
					<height>34</height>
					<font>Bold28</font>
					<textcolor>ffebebeb</textcolor>
					<label>[B]SD[/B]</label>
					<visible>!IntegerGreaterThan(VideoPlayer.VideoResolution,719)</visible>
				</control>
				<left>92</left>
				<bottom>38</bottom>
				<width>800</width>
				<height>40</height>
				<itemgap>4</itemgap>
				<orientation>horizontal</orientation>
				<usecontrolcoords>true</usecontrolcoords>
				<!--  Current position -->
				<control type="label">
					<left>25</left>
					<width>auto</width>
					<height>34</height>
					<font>Light27</font>
					<textcolor>fff3f3f3</textcolor>
					<label>$INFO[Player.Time]</label>
				</control>
				<!--  Divider -->
				<control type="label">
					
					<width>auto</width>
					<height>34</height>
					<font>Light27</font>
					<textcolor>ff696969</textcolor>
					<label>/</label>
					<visible>!IsEmpty(Player.Time) + !IsEmpty(Player.Duration)</visible>
				</control>
				<!--  Total length -->

				<control type="label">
					
					<width>auto</width>
					<height>34</height>
					<font>Light27</font>
					<textcolor>ff696969</textcolor>
					<label>$INFO[Player.Duration]</label>
				</control>

				<!--  Resolution label -->
<!-- 				<control id="99" type="label">
					<left>24</left>
					<top>-2</top>
					<width>auto</width>
					<height>34</height>
					<font>Bold29</font>
					<textcolor>ffebebeb</textcolor>
					<label>VideoPlayer.VideoResolution</label>
				</control> -->
<!-- 				<control type="label">
					<left>55</left>
					<top>0</top>
					<width>auto</width>
					<height>30</height>
					<font>Reg27</font>
					<textcolor>ffebebeb</textcolor>
					<label>$INFO[VideoPlayer.VideoCodec] - Ch:$INFO[VideoPlayer.AudioChannels,, ] - $INFO[VideoPlayer.AudioCodec]$VAR[VideoPlayer.VideoCodec, ] - $INFO[VideoPlayer.VideoAspect]</label>
				</control> -->
		
			</control>
			<control id="300" type="grouplist">
				<centerleft>50%</centerleft>
				<bottom>26</bottom>
				<width>800</width>
				<height>64</height>
				<onup condition="system.getbool(videoplayer.autoplaynextitem)">SetFocus(16)</onup>
				<onup condition="!system.getbool(videoplayer.autoplaynextitem)">SetFocus(15)</onup>
				<itemgap>0</itemgap>
				<align>center</align>
				<orientation>horizontal</orientation>
				<defaultcontrol always="true">204</defaultcontrol>
				<visible>!Skin.HasSetting(HideOSDControls)</visible>
				<!-- Skip Back -->
				<control type="button" id="301">
					<width>64</width>
					<height>64</height>
					<font>-</font>
					<texturefocus>osd/osd_prev_fo.png</texturefocus>
					<texturenofocus>osd/osd_prev_nf.png</texturenofocus>
					<onclick>PlayerControl(Previous)</onclick>
				</control>
				<!-- Rewind -->
				<control type="button" id="302">
					<width>64</width>
					<height>64</height>
					<font>-</font>
					<texturefocus>osd/osd_rw_fo.png</texturefocus>
					<texturenofocus>osd/osd_rw_nf.png</texturenofocus>
					<onclick>PlayerControl(Rewind)</onclick>
				</control>
				<!-- Stop -->
				<control type="button" id="303">
					<width>64</width>
					<height>64</height>
					<font>-</font>
					<texturefocus>osd/osd_stop_fo.png</texturefocus>
					<texturenofocus>osd/osd_stop_nf.png</texturenofocus>
					<onclick>PlayerControl(Stop)</onclick>
				</control>
				<!-- Play/Pause -->
				<control type="togglebutton" id="304">
					<width>64</width>
					<height>64</height>
					<font>-</font>
					<texturefocus>osd/osd_pause_fo.png</texturefocus>
					<texturenofocus>osd/osd_pause_nf.png</texturenofocus>
					<usealttexture>Player.Paused | Player.Forwarding | Player.Rewinding</usealttexture>
					<alttexturefocus>osd/osd_play_fo.png</alttexturefocus>
					<alttexturenofocus>osd/osd_play_nf.png</alttexturenofocus>
					<onclick>PlayerControl(Play)</onclick>
				</control>
				<!-- Fast Forward -->
				<control type="button" id="305">
					<width>64</width>
					<height>64</height>
					<font>-</font>
					<texturefocus>osd/osd_ff_fo.png</texturefocus>
					<texturenofocus>osd/osd_ff_nf.png</texturenofocus>
					<onclick>PlayerControl(Forward)</onclick>
				</control>
				<!-- Next -->
				<control type="button" id="306">
					<width>64</width>
					<height>64</height>
					<font>-</font>
					<texturefocus>osd/osd_next_fo.png</texturefocus>
					<texturenofocus>osd/osd_next_nf.png</texturenofocus>
					<onclick>PlayerControl(Next)</onclick>
				</control>
			</control>
			<!--  Current time -->
			<control type="label">
				<right>92</right>
				<bottom>45</bottom>
				<width>800</width>
				<height>30</height>
				<font>Reg27</font>
				<align>right</align>
				<textcolor>fff3f3f3</textcolor>
				<label>$INFO[System.Time]</label>
			</control>
			<!-- Options -->
			<control id="100" type="grouplist">
				<right>92</right>
				<bottom>128</bottom>
				<width>600</width>
				<height>600</height>
				<align>right</align>
				<itemgap>0</itemgap>
				<onleft>noop</onleft>
				<onright>noop</onright>
				<ondown condition="!Skin.HasSetting(HideOSDControls)">304</ondown>
				<orientation>vertical</orientation>
				<visible>!Control.IsVisible(200) + !Player.Forwarding + !Player.Rewinding</visible>
				<!-- 3D mode -->
				<control id="10" type="button">
					<width>600</width>
					<height>58</height>
					<font>Light32</font>
					<align>right</align>
					<label>$LOCALIZE[31153]</label>
					<textcolor>ffffffff</textcolor>
					<shadowcolor>ff000000</shadowcolor>
					<focusedcolor>ffffc04b</focusedcolor>
					<texturefocus>-</texturefocus>
					<texturenofocus>-</texturenofocus>
					<onclick>SetFocus(200)</onclick>
					<visible>VideoPlayer.IsStereoscopic</visible>
				</control>
				<!-- DVD menu -->
				<control id="11" type="button">
					<width>600</width>
					<height>58</height>
					<font>Light32</font>
					<align>right</align>
					<label>$LOCALIZE[31136]</label>
					<textcolor>ffffffff</textcolor>
					<shadowcolor>ff000000</shadowcolor>
					<focusedcolor>ffffc04b</focusedcolor>
					<texturefocus>-</texturefocus>
					<texturenofocus>-</texturenofocus>
					<onclick>PlayerControl(ShowVideoMenu)</onclick>
					<visible>VideoPlayer.HasMenu</visible>
				</control>
				<!-- Bookmarks -->
				<control id="12" type="button">
					<width>600</width>
					<height>58</height>
					<font>Light32</font>
					<align>right</align>
					<label>Bladwijzers</label>
					<textcolor>ffffffff</textcolor>
					<shadowcolor>ff000000</shadowcolor>
					<focusedcolor>ffffc04b</focusedcolor>
					<texturefocus>-</texturefocus>
					<texturenofocus>-</texturenofocus>
					<onclick>ActivateWindow(125)</onclick>
					<onclick>Close</onclick>
				</control>
				<!-- Video Settings -->
				<control id="13" type="button">
					<width>600</width>
					<height>58</height>
					<font>Light32</font>
					<align>right</align>
					<label>Video Instellingen</label>
					<textcolor>ffffffff</textcolor>
					<shadowcolor>ff000000</shadowcolor>
					<focusedcolor>ffffc04b</focusedcolor>
					<texturefocus>-</texturefocus>
					<texturenofocus>-</texturenofocus>
					<onclick>ActivateWindow(123)</onclick>
				</control>
				<!-- Audio Settings -->
				<control id="14" type="button">
					<width>600</width>
					<height>58</height>
					<font>Light32</font>
					<align>right</align>
					<label>Audio Instelingen</label>
					<textcolor>ffffffff</textcolor>
					<shadowcolor>ff000000</shadowcolor>
					<focusedcolor>ffffc04b</focusedcolor>
					<texturefocus>-</texturefocus>
					<texturenofocus>-</texturenofocus>
					<onclick>ActivateWindow(124)</onclick>
				</control>
					<!-- Subtitles -->
				<control id="15" type="button">
					<width>600</width>
					<height>58</height>
					<font>Light32</font>
					<align>right</align>
					<label>Ondertitels</label>
					<textcolor>ffffffff</textcolor>
					<shadowcolor>ff000000</shadowcolor>
					<focusedcolor>ffffc04b</focusedcolor>
					<texturefocus>-</texturefocus>
					<texturenofocus>-</texturenofocus>
					<onclick>SetFocus(200)</onclick>
				</control>
				<!-- Next Video -->
				<control id="16" type="button">
					<width>600</width>
					<height>58</height>
					<font>Light32</font>
					<align>right</align>
					<label>Next</label>
					<textcolor>ffffffff</textcolor>
					<shadowcolor>ff000000</shadowcolor>
					<focusedcolor>ffffc04b</focusedcolor>
					<texturefocus>-</texturefocus>
					<texturenofocus>-</texturenofocus>
					<onclick>PlayerControl(Next)</onclick>
					<visible>Window.IsVisible(VideoFullScreen.xml) + system.getbool(videoplayer.autoplaynextitem)</visible>
				</control>
			</control>
			<control type="image">
				<bottom>125</bottom>
				<width>1920</width>
				<height>400</height>
				<texture>osd/mask.png</texture>
				<visible>ControlGroup(200).HasFocus</visible>
			</control>
			<control id="200" type="grouplist">
				<left>92</left>
				<bottom>161</bottom>
				<width>600</width>
				<height>320</height>
				<itemgap>27</itemgap>
				<onleft>noop</onleft>
				<onright>noop</onright>
				<onback>SetFocus(12)</onback>
				<align>right</align>
				<orientation>vertical</orientation>
				<visible allowhiddenfocus="true">ControlGroup(200).HasFocus</visible>
				<control id="203" type="button">
					<width>380</width>
					<height>58</height>
					<font>Reg22</font>
					<label>Ondertitels Downloaden</label>
					
					<onclick>Close</onclick>
					<onclick>Dialog.Close(VideoOSD)</onclick>
					<onclick>ActivateWindow(SubtitleSearch)</onclick>
					<onback>SetFocus(12)</onback>
				</control>
				<control id="205" type="button">
					<width>380</width>
					<height>58</height>
					<font>Light32</font>
					<label>Ondertitels Synchroniseren</label>
					<textoffsetx>34</textoffsetx>
					<onclick>SubtitleDelay</onclick>
					<onback>SetFocus(12)</onback>
					<visible>VideoPlayer.SubtitlesEnabled</visible>
				</control>
				<control id="204" type="button">
					<width>380</width>
					<height>58</height>
					<font>Light32</font>
					<label>Uitgeschakeld</label>
					<textoffsetx>34</textoffsetx>
					<onclick>ShowSubtitles</onclick>
					<onback>SetFocus(12)</onback>
					<visible>!VideoPlayer.SubtitlesEnabled</visible>
				</control>
				<control id="202" type="button">
					<width>380</width>
					<height>58</height>
					<font>Light32</font>
					<label>Ingeschakeld</label>
					<textoffsetx>34</textoffsetx>
					<onclick>ShowSubtitles</onclick>
					<onback>SetFocus(12)</onback>
					<visible>VideoPlayer.SubtitlesEnabled</visible>
				</control>
				<control id="201" type="button">
					<width>380</width>
					<height>58</height>
					<font>Light32</font>
					<textoffsetx>34</textoffsetx>
					<label>$LOCALIZE[248] ($INFO[VideoPlayer.SubtitlesLanguage])</label>
					<onclick>CycleSubtitle</onclick>
					<onback>SetFocus(12)</onback>
					<visible>VideoPlayer.SubtitlesEnabled</visible>
				</control>
			</control>
		</control>
	</controls>


</window>
